{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Take a break!",
  "version": "0.1.0",
  "identifier": "com.sixeightkilo.tab",
  "build": {
      "beforeDevCommand": "cd /home/dev/tab/ui && npm run dev",
      "beforeBuildCommand": "cd /home/dev/tab/ui && npm run build",
      "frontendDist": "../ui/dist"
  },
  "app": {
    "windows": [
      {
        "title": "Take a break!",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
